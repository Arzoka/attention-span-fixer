{
	"manifest_version": 3,
	"name": "Auto Anti-Brainrot Extension",
	"version": "1.0",
	"description": "Automatically soothes those neurons after a page is loaded.",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"src/one.webp",
				"src/two.webp",
				"src/three.webp",
				"src/four.webp",
				"src/five.webp",
				"src/six.webp"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	}
}
